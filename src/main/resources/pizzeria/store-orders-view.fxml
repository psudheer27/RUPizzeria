<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="357.0" prefWidth="537.0" spacing="10" style="-fx-background-color: #FFFFE0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pizzeria.StoreOrdersViewController">
    <!-- Title -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Store Orders" />

    <!-- Order Number and Total Section -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Order number" />
        <ComboBox fx:id="orderNumberComboBox" prefWidth="100" />
        <Label text="Order Total (tax included) $" />
        <TextField fx:id="orderTotalField" editable="false" prefWidth="100" />
    </HBox>

    <!-- List of Orders -->
    <ListView fx:id="orderListView" prefHeight="200" prefWidth="350" />

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="cancelOrderButton" text="Cancel Order" />
        <Button fx:id="exportOrdersButton" text="Export Store Orders" />
    </HBox>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>

</VBox>
